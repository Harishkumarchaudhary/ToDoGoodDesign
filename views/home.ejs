<html>
    <head>
        <title>
            <%=locals.title %>
        </title>
 
        <!-- Our style sheet should be below other styles to override them -->
        <link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>
    <body>
        <h1 style="text-align: center;">ToDo App</h1>

        <div class = "todo-container">
            <div class="form-container">
                <form action="/create-task" method="post">
                  <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name = "description" id="textarea" rows="4" placeholder="What do you need to do?"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="category">Choose a category:</label>
                    <select id="category" name="category">
                      <option value="School">School</option>
                      <option value="Work">Work</option>
                      <option value="Personal">Personal</option>
                      <option value="Others">Others</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="date">Due Date</label>
                    <input type="date" id="date" name="completion_date">
                  </div>
                  <button type="submit">Submit</button>
                </form>
              </div>
        </div>

        
        <div class="list-container">
            <% for (let i of todo_list) {%>
                <div class="list-item">
                    <div>
                      <p><%= i.description %></p>
                    </div>
                    <div>
                      <button class="custom-category-button"><%= i.category %></button>
                    </div>
                    <div>
                      <p><%= i.completion_date.toISOString().substring(0, 10); %></p>
                    </div>
                    <div>
                        <a href="/delete-task/?id=<%= i._id%>"><button>Delete</button></a>
                    </div>
                </div>
            <% } %>    
        </div>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>